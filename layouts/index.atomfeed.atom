{{- $authorEmail := "" }}
{{- with site.Params.User }}
  {{- if reflect.IsMap . }}
    {{- with .email }}
      {{- $authorEmail = . }}
    {{- end }}
  {{- end }}
{{- end }}

{{- $authorName := "" }}
{{- with site.Params.User }}
  {{- if reflect.IsMap . }}
    {{- with .name }}
      {{- $authorName = . }}
    {{- end }}
  {{- else }}
    {{- $authorName  = . }}
  {{- end }}
{{- end }}

{{- $pctx := . }}
{{- if .IsHome }}{{ $pctx = .Site }}{{ end }}
{{- $pages := slice }}
{{- if or $.IsHome $.IsSection }}
{{- $pages = $pctx.RegularPages }}
{{- else }}
{{- $pages = $pctx.Pages }}
{{- end }}
{{- $limit := .Site.Config.Services.RSS.Limit }}
{{- if ge $limit 1 }}
{{- $pages = $pages | first $limit }}
{{- end }}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>\n" | safeHTML -}}
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ .Site.Title }}</title>
  <subtitle>Recent Content on my Website</subtitle>
  <link rel="self" type="application/atom+xml" href="{{ .Site.Params.General.rssFeed | absURL }}" />
  <link rel="alternate" type="text/html" href="{{ .Permalink }}" />
  <updated>{{ (index $pages.ByLastmod.Reverse 0).Lastmod.Format "2006-01-02T15:04:05-03:00" | safeHTML }}</updated>
  <id>{{ .Permalink }}</id>
  <author>
    <name>{{ $authorName }}</name>
  </author>
  <icon>{{ .Site.Params.General.Seo.favicon | absURL }}</icon>
  <rights>Â© {{ now.Year }} {{ $authorName }}</rights>
  {{- range (where .Site.RegularPages "Section" "posts") }}
  <entry>
    <title>{{ .Title }}</title>
    <link href="{{ .Permalink }}" />
    <id>{{ .Permalink }}</id>
    <updated>{{ .PublishDate.Format "2006-01-02T15:04:05-03:00" | safeHTML }}</updated>
    <summary>{{ .Description | transform.XMLEscape | safeHTML }}</summary>
    {{- $contact := printf "<p>~ Thanks for reading this post via RSS!<br>Let me know your thoughts by leaving a message via <a href=\"mailto:%s ?subject=Re: %s\">Email</a> or the <a href=\"%s\">Fediverse</a>.</p>" .Site.Params.User.email .Title .Site.Params.User.fediverseURL | transform.XMLEscape | safeHTML }}
    <content type="html">{{ .Content | transform.XMLEscape | safeHTML }}{{ with $contact }}{{ . }}{{ end }}</content>
    <author>
      <name>{{ $authorName }}</name>
      <email>{{ $authorEmail }}</email>
      <uri>{{ .Site.BaseURL }}</uri>
    </author>
    {{- with .Params.tags }}
      {{- range . }}
        <category term="{{ . }}" />
      {{- end }}
    {{- end }}
  </entry>
  {{- end }}
</feed>
{{- $authorEmail := "" }}
{{- with site.Params.User }}
  {{- if reflect.IsMap . }}
    {{- with .email }}
      {{- $authorEmail = . }}
    {{- end }}
  {{- end }}
{{- end }}

{{- $authorName := "" }}
{{- with site.Params.User }}
  {{- if reflect.IsMap . }}
    {{- with .name }}
      {{- $authorName = . }}
    {{- end }}
  {{- else }}
    {{- $authorName  = . }}
  {{- end }}
{{- end }}

{{- $pctx := . }}
{{- if .IsHome }}{{ $pctx = .Site }}{{ end }}
{{- $pages := slice }}
{{- if or $.IsHome $.IsSection }}
{{- $pages = $pctx.RegularPages }}
{{- else }}
{{- $pages = $pctx.Pages }}
{{- end }}
{{- $limit := .Site.Config.Services.RSS.Limit }}
{{- if ge $limit 1 }}
{{- $pages = $pages | first $limit }}
{{- end }}
{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\"?>\n" | safeHTML -}}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ "Recent Content on my Website" }}</description>
    <image>
        <url>{{ .Site.Params.General.Seo.favicon | absURL }}</url>
        <title>{{ .Site.Title }}</title>
        <link>{{ .Permalink }}</link>
    </image>
    <language>{{ site.Language.LanguageCode }}</language>{{ with $authorEmail }}
    <managingEditor>{{.}}{{ with $authorName }} ({{ . }}){{ end }}</managingEditor>{{ end }}{{ with $authorEmail }}
    <webMaster>{{ . }}{{ with $authorName }} ({{ . }}){{ end }}</webMaster>{{ end }}{{ with $authorName }}
    <copyright>{{- printf "Â©" | safeHTML }} {{ now.Year }} {{ . }}</copyright>{{ end }}{{ if not .Date.IsZero }}
    <lastBuildDate>{{ (index $pages.ByLastmod.Reverse 0).Lastmod.Format "2006-01-02T15:04:05-03:00" | safeHTML }}</lastBuildDate>{{ end }}{{- with .OutputFormats.Get "RSS" }}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}{{/*{{- range $pages }}*/}}{{ range (where .Site.RegularPages "Section" "posts") }}
    <item>
      <title>{{ .Title }}</title>
      <author>{{ with $authorName}}{{ . }}{{ end }}</author>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .PublishDate.Format "2006-01-02T15:04:05-03:00" | safeHTML }}</pubDate>{{- with $authorName }}
      <author>{{ . }} {{ with $authorEmail }}({{ . }}){{ end }}</author>{{ end }}
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      {{- $contact := printf "<p>~ Thanks for reading this post via RSS!<br>Let me know your thoughts by leaving a message via <a href=\"mailto:%q ?subject=Re: %q\">Email</a>, <a href=\" %q\">Mastodon</a>, or <a href=\" %q\">Bluesky</a>.</p>" .Site.Params.User.email .Title .Site.Params.User.mastodonURL .Site.Params.User.blueskyURL | transform.XMLEscape | safeHTML }}
      <description>{{ .Content | transform.XMLEscape | safeHTML }}{{ with $contact }}{{ . }}{{ end }}</description>{{ with .Params.tags }}{{ range . }}
      <category>{{ . }}</category>{{ end }}{{ end }}
    </item>
    {{- end }}
  </channel>
</rss>